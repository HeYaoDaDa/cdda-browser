<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

  <persistence-unit name="cdda-browser">
    <provider>org.hibernate.reactive.provider.ReactivePersistenceProvider</provider>

    <class>fun.hydd.cdda_browser.entity.CddaObject</class>
    <class>fun.hydd.cdda_browser.entity.CddaMod</class>
    <class>fun.hydd.cdda_browser.entity.CddaVersion</class>
      <class>fun.hydd.cdda_browser.entity.JsonEntity</class>
      <class>fun.hydd.cdda_browser.entity.GetTextPo</class>
    <class>fun.hydd.cdda_browser.entity.FileEntity</class>

    <properties>
      <!-- PostgresSQL -->
      <property name="javax.persistence.jdbc.url"
                value="jdbc:postgresql://localhost:5432/postgres"/>

      <!-- Credentials -->
      <property name="javax.persistence.jdbc.user"
                value="postgres"/>
      <property name="javax.persistence.jdbc.password"
                value="wilson"/>

      <!-- The Vert.x SQL Client connection pool size -->
      <property name="hibernate.connection.pool_size"
                value="10"/>

      <!-- Automatic schema export -->
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>

      <!-- SQL statement logging -->
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.highlight_sql" value="true"/>

      <property name="hibernate.jdbc.batch_size" value="1000"/>
      <property name="hibernate.implicit_naming_strategy"
                value="org.hibernate.boot.model.naming.ImplicitNamingStrategyComponentPathImpl"/>
    </properties>

  </persistence-unit>

</persistence>
